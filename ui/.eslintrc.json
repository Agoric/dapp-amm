{
  "ignorePatterns": ["**/*.umd.js", "**/generated/*"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": "off"
  },
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"],
        "paths": ["src"]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "extends": ["@agoric", "plugin:react/recommended"]
}
